<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/WindowBg"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="START DATE"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/filter_start_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_30"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="END DATE"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/filter_end_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_30"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_12" />

        <Button
            android:id="@+id/filter_submit_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_30"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VIEW BY: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_day"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="DAY"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />

            <Button
                android:id="@+id/button_week"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="WEEK"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />

            <Button
                android:id="@+id/button_month"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="MONTH"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />

            <Button
                android:id="@+id/button_all"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="ALL"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />


        </LinearLayout>

        <View
            android:layout_width="@dimen/margin_60"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CHART TYPE: "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="BAR"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />

            <Button
                android:id="@+id/button_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="LINE"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />

            <Button
                android:id="@+id/button_pie"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_weight="1"
                android:background="@drawable/filter_button_background"
                android:text="PIE"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_10" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>